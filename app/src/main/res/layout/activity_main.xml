<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:autoSizeTextType="uniform"
        android:gravity="end|bottom"
        android:textAlignment="gravity"
        android:padding="10dp"
        android:background="@color/black"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/result"
        android:background="@color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="MC"
                android:onClick="clickMC"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="M+"
                android:onClick="clickMPlus"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="M-"
                android:onClick="clickMLess"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="MR"
                android:onClick="clickMR"
                android:textSize="24sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="A/C"
                android:onClick="clickAC"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="+/-"
                android:onClick="clickPlusLess"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="%"
                android:onClick="clickPercent"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="/"
                android:onClick="clickDivision"
                android:textSize="24sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="7"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="8"
                android:onClick="clickNumber"
                android:textSize="24sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="9"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="X"
                android:onClick="clickMutiplication"
                android:textSize="24sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="4"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="5"
                android:onClick="clickNumber"
                android:textSize="24sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="6"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="-"
                android:onClick="clickLess"
                android:textSize="24sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="1"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="2"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="3"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="+"
                android:onClick="clickPlus"
                android:textSize="24sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:text="0"
                android:onClick="clickNumber"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text=","
                android:onClick="clickSplit"
                android:textSize="24sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="="
                android:onClick="clickEqual"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>